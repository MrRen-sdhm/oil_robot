<?xml version="1.0"?>

<launch>
    <!-- start the Realsense -->
    <include file="$(find realsense2_viewer)/launch/realsense2_viewer.launch" />

    <!-- bring up robot-->
    <include file="$(find oil_application)/launch/oil_bringup.launch" >
      <arg name="fake" value="false" />
      <arg name="rviz" value="false" />
    </include>
    
    <!-- publish tf between camera_color_optical frame and gripper frame-->
    <include file="$(find oil_application)/calibration/publish_static_tf.launch" />

    <!-- get the translation between juggle frame and end effector frame -->
    <node name="get_juggle_pose" pkg="oil_application" type="get_juggle_pose.py" output="screen" />

    <!-- start the rviz -->
    <node name="$(anon rviz)" pkg="rviz" type="rviz" respawn="false" args="-d $(find oil_application)/launch/oil_pickup.rviz" output="screen" />

</launch>
