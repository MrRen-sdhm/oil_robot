<?xml version="1.0"?>

<launch>  
    <arg name="fake" default="false" />
    <arg name="rviz" default="true" />
    <arg name="show" default="true" />
    <arg name="hmi" default="true" />

    <!-- robot_ip: IP-address of the robot's socket-messaging server -->
    <!-- <arg name="robot_ip" doc="IP of the controller" /> -->

    <!-- robot driver -->
    <include unless="$(arg fake)" file="$(find oil_driver)/launch/oil_driver.launch"> 
      <arg name="use_hand" value="true" />
      <arg name="show_info" value="$(arg show)" />
    </include>

    <!-- robot model -->
    <include unless="$(arg fake)" file="$(find oil_with_gripper_moveit_config)/launch/demo.launch">
      <arg name="use_rviz" value="$(arg rviz)" />
    </include>

    <!-- robot model fake -->
    <include if="$(arg fake)" file="$(find oil_with_gripper_moveit_config)/launch/fake.launch">
      <arg name="use_rviz" value="$(arg rviz)" />
      <arg name="use_publisher" value="true" />
    </include>

    <!-- robot hmi -->
    <include if="$(arg hmi)" file="$(find oil_hmi)/launch/oil_hmi.launch" />


</launch>
